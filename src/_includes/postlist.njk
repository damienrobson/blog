<ol>
    {% for post in collections.posts | reverse -%}
        <li>
            <h2>
                <a href="{{ post.url }}">
                    {{ post.data.title }}
                </a>
            </h2>
            <p>
                {{ post.data.details }} 
            </p>
            <div>
                {{ post.data.summary }} 
            </div>
        </li>
    {% endfor %}
</ul>
